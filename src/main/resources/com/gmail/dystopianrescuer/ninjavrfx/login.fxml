<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<FlowPane alignment="CENTER_RIGHT" columnHalignment="CENTER" hgap="1.0" maxHeight="1.7976931348623157E308"
          maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" onKeyPressed="#onKeyPressed"
          prefHeight="616.0" prefWidth="1222.0" style="-fx-background-color: #02030A;" vgap="3.0"
          xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.gmail.dystopianrescuer.ninjavrfx.controllers.LoginController">
    <children>
        <ImageView fitHeight="509.0" fitWidth="584.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../../../../img/logo.png"/>
            </image>
        </ImageView>
        <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="593.0"
              prefWidth="717.0">
            <children>
                <Label text="Inicio de sesión" textFill="#c9c9c9">
                    <VBox.margin>
                        <Insets bottom="50.0"/>
                    </VBox.margin>
                    <font>
                        <Font name="System Bold" size="27.0"/>
                    </font>
                </Label>
                <Label ellipsisString="" text="Ingresa tus credenciales de empleado para empezar" textFill="WHITE">
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="user" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                           minHeight="-Infinity" minWidth="-Infinity" prefHeight="36.0" prefWidth="312.0"
                           promptText="Usuario">
                    <VBox.margin>
                        <Insets left="30.0" right="30.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
                <PasswordField fx:id="password" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                               minHeight="-Infinity" minWidth="-Infinity" prefHeight="36.0" prefWidth="312.0"
                               promptText="Contaseña">
                    <VBox.margin>
                        <Insets left="30.0" right="30.0" top="12.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </PasswordField>
                <Label fx:id="error" alignment="CENTER" ellipsisString="" prefHeight="11.0" prefWidth="251.0"
                       text="Error" textFill="RED" visible="false">
                    <font>
                        <Font name="Arial" size="10.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <Button fx:id="ingresar" mnemonicParsing="false" onAction="#onButtonClick" prefHeight="29.0"
                        prefWidth="238.0" style="-fx-background-radius: 5px; -fx-background-color: #19AFD1;"
                        text="Ingresar">
                    <VBox.margin>
                        <Insets top="40.0"/>
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Label ellipsisString="" text="Si tienes algún problema, contacta al administrador" textFill="WHITE">
                    <VBox.margin>
                        <Insets top="7.0"/>
                    </VBox.margin>
                    <font>
                        <Font name="Arial" size="10.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <Label alignment="BOTTOM_RIGHT" contentDisplay="RIGHT" ellipsisString="" prefHeight="13.0" prefWidth="444.0"
               text="NinjaVR POS V0.9 by DystopianRescuer. Prohibida su reproducción y distribución total o parcial."
               textFill="WHITE">
            <font>
                <Font name="Arial" size="10.0"/>
            </font>
        </Label>
    </children>
</FlowPane>
